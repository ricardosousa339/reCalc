<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimaryDark</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Numbers">
        <item name="android:background">@drawable/ripple_nums</item>
        <item name="android:elevation">10dp</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">38sp</item>
        <item name="android:onClick">onClick</item>

    </style>
    
    <style name="Operations">
        <item name="android:background">@drawable/ripple_op</item>
        <item name="android:textSize">42sp</item>
        <item name="android:elevation">10dp</item>
        <item name="android:onClick">onClick</item>

    </style>

    <style name="Equal">
        <item name="android:background">@drawable/ripple_eq</item>
        <item name="android:textSize">42sp</item>
        <item name="android:onClick">onClick</item>
    </style>

</resources>
